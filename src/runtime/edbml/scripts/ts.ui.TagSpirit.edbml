<!DOCTYPE edbml>
<script>
	<?input name="tag" type="ts.ui.TagModel"?>
	var Markdown = ts.ui.Markdown;

	var hasico = tag.icon;
	var isicon = hasico && typeof tag.icon === 'string';
	var isitem = hasico && tag.icon.item
	var hasdat = tag.data.size;
	var hasdel = tag.deletable;
	var dohack = tag.tempdirtyflag;

	if (isicon || isitem) {
		<figcaption>
			if (isicon) {
				<i class="${tag.icon}"></i>
			} else {
				out.html += tag.icon.render();
			}
		</figcaption>
	}
	if (hasdat) {
		tag.data.forEach(function(val, key) {
			<dl>
				if (key) {
          if (Array.isArray(key)) {
            key.forEach(dt);
          } else {
            dt(key);
          }
         }
         if (val) {
          if (Array.isArray(val)) {
            val.forEach(dd);
          } else {
            dd(val);
          }
         }
      </dl>
		});
	}
	if (hasdel) {
		<del></del>
	}

	function dt(term) {
		<dt>
			out.html += Markdown.parse(term);
		</dt>
	}
	function dd(definition) {
		<dd>
			out.html += Markdown.parse(definition);
		</dd>
	}
</script>
